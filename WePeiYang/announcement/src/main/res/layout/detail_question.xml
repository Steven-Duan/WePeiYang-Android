<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toTopOf="@+id/ll2"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/sort"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:text="分类:"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/ll1"
                    app:layout_constraintStart_toStartOf="parent"
                   />

                <Spinner
                    android:id="@+id/edit_sort_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="15dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:singleLine="true"
                    android:textSize="15dp"
                    android:background="@drawable/edit_text_selector"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/ll1"
                    app:layout_constraintStart_toEndOf="@id/sort" />

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toTopOf="@+id/ll3"
                app:layout_constraintTop_toBottomOf="@id/ll1">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="12dp"
                    android:gravity="center_vertical"
                    android:text="标题:"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@id/ll2"
                    app:layout_constraintStart_toStartOf="@id/ll2"
                    app:layout_constraintTop_toTopOf="@id/ll2"
                     />

                <EditText
                    android:id="@+id/edit_title"
                    android:layout_width="0dp"
                    android:hint="不超过20个字"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="15dp"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:focusable="true"
                    android:background="@drawable/edit_text_selector"
                    android:focusableInTouchMode="true"
                    app:layout_constraintEnd_toEndOf="@id/ll2"
                    app:layout_constraintStart_toEndOf="@id/title"

                     />


            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ll3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/ll2"
                tools:ignore="NotSibling">

                <TextView
                    android:id="@+id/content"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="12dp"
                    android:gravity="center_vertical"
                    android:text="正文:"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="@id/ll3"
                    app:layout_constraintStart_toStartOf="@id/ll3"
                    app:layout_constraintTop_toTopOf="@id/ll3"
                    android:layout_marginLeft="12dp"
                    tools:ignore="NotSibling" />

                <EditText
                    android:id="@+id/edit_content"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/edit_text_selector"
                    android:textSize="15dp"
                    android:hint="不超过200个字"
                    android:maxLength="200"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:layout_constraintEnd_toEndOf="@id/ll3"
                    app:layout_constraintStart_toEndOf="@id/content"
                    app:layout_constraintTop_toBottomOf="@id/ll2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    />

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/release_button"
                app:layout_constraintTop_toBottomOf="@id/ll3">

                <TextView
                    android:id="@+id/picture"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="12dp"
                    android:gravity="center_vertical"
                    android:text="配图："
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@id/ll4"
                    app:layout_constraintStart_toStartOf="@id/ll4"
                    app:layout_constraintTop_toTopOf="@id/ll4"
                    />
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/publish_picture"
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    app:layout_constraintStart_toEndOf="@id/picture"
                    app:layout_constraintBottom_toBottomOf="@+id/ll4"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="15dp"/>

        </android.support.constraint.ConstraintLayout>
            <Button
                android:id="@+id/release_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ll4"
                android:layout_marginHorizontal="100dp"
                android:layout_marginVertical="100dp"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/button_shape"
                android:text="确认发布"
                android:textSize="22dp"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:elevation="5dp">
            </Button>
        </android.support.constraint.ConstraintLayout>



    </android.support.v4.widget.NestedScrollView>



</android.support.constraint.ConstraintLayout>