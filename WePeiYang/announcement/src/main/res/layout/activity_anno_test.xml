<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnnoTestActivity">

    <Button
        android:id="@+id/annoDetailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点我看看详情页面"
        app:layout_constraintBottom_toTopOf="@id/annoCommentDetailButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/annoCommentDetailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这里其实什么也没有"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/annoDetailButton" />

</android.support.constraint.ConstraintLayout>